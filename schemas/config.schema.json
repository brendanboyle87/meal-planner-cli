{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WeekConfig",
  "type": "object",
  "required": [
    "week_start_date",
    "variability_window_weeks"
  ],
  "properties": {
    "week_start_date": {
      "type": "string",
      "format": "date"
    },
    "variability_window_weeks": {
      "type": "number"
    },
    "allow_high_effort_dinner": {
      "type": "object",
      "additionalProperties": {
        "type": "boolean"
      }
    },
    "skip_meals": {
      "type": "object"
    },
    "enable_meal_prep_sunday": {
      "type": "boolean"
    },
    "meal_prep_max_minutes": {
      "type": "number"
    },
    "preferred_prep_items": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "pantry": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "pantry_file": {
      "type": "string"
    }
  }
}