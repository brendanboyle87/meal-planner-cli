{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Recipe",
  "type": "object",
  "required": [
    "id",
    "name",
    "meals",
    "ingredients"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "meals": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "prep_time_min": {
      "type": "number"
    },
    "cook_time_min": {
      "type": "number"
    },
    "servings_per_recipe": {
      "type": "number"
    },
    "produces_leftovers": {
      "type": "boolean",
      "description": "Set manually when the recipe should create leftovers for a future meal."
    },
    "leftovers_replace_meal": {
      "type": "string",
      "description": "Meal type that leftovers will replace; leave unset during automated conversion."
    },
    "yields_prep_item": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "uses_prep_item": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ingredients": {
      "type": "array",
      "items": {
        "type": "object"
      }
    }
  }
}
